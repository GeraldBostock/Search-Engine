<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - YAM</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #d2d5d8">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id ="home"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Keyword Counter", "Keyword", new { controller = "Home" }, new { id = "keyword" })</li>
                    <li>@Html.ActionLink("URL Ranking", "RankUrl", new { controller = "Home" }, new { id = "keyword" })</li>
                    <li>@Html.ActionLink("Site Ranking", "Site", new { controller = "Home" }, new { id = "site" })</li>
                    <li>@Html.ActionLink("Semantic Analysis", "Semantic", new { controller = "Home" }, new { id = "semantic" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/p5.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
